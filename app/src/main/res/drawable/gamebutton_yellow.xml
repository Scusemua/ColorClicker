<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.benrcarvergmail.colorclicker">
    <item app:state_incorrect="false">
        <shape android:shape="rectangle" >
            <corners
                android:radius="14dp"
                />
            <solid
                android:color="#fff176"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="5dp"
                android:color="#FFFFFF"
                />
        </shape>
    </item>
    <item app:state_incorrect="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="14dp"
                />
            <solid
                android:color="#fff176"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="5dp"
                android:color="@color/incorrect"
                />
        </shape>
    </item>
</selector>